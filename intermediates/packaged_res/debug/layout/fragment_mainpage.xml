<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainpageActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cont" />


    <AutoCompleteTextView
        android:id="@+id/searchEditText_main"
        android:layout_width="323dp"
        android:layout_height="41dp"
        android:layout_marginTop="68dp"
        android:completionThreshold="1"
        android:hint="   검색어를 입력하세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/study_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/oval_style"
        android:fontFamily="@font/nanum2"
        android:textSize="10sp"
        android:text="r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/art_btn"
        android:layout_width="60dp"
        android:fontFamily="@font/nanum2"
        android:layout_height="60dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/oval_style"
        android:textSize="10sp"
        android:text="o"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/etc_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:fontFamily="@font/nanum2"
        android:layout_marginStart="310dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/oval_style"
        android:textSize="10sp"
        android:text=","
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/music_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:fontFamily="@font/nanum2"
        android:layout_marginStart="220dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/oval_style"
        android:textSize="10sp"
        android:text="p"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="205dp"
        android:text="오늘의 재능기부 "
        android:fontFamily="@font/nanum4"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="180dp"
        android:text="우리 동네 재능기부 "
        android:textColor="@color/black"
        android:textSize="24dp"
        android:fontFamily="@font/nanum4"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />


     <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_main"
        android:layout_width="335dp"
        android:layout_height="185dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.459"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_main2"
        android:layout_width="325dp"
        android:layout_height="185dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881"
        tools:ignore="DuplicateIds" />


</androidx.constraintlayout.widget.ConstraintLayout>